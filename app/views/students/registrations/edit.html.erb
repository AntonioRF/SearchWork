<div class="wrapper">
  <h4 class="center">Mi Perfil</h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :telefono %><br />
      <%= f.text_field :telefono, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :boleta %><br />
      <%= f.text_field :boleta, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :interes %><br />
      <%= f.text_field :interes, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :edad %><br />
      <%= f.number_field :edad, autofocus: true %>
    </div>
    <div><%= f.check_box :es_egresado, {}, true %> <%= f.label :es_egresado, "Egresado" %> </div>
    <div><%= f.check_box :es_egresado, {}, false %> <%= f.label :es_egresado, "Estudiante" %> </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions flex-center">
      <%= f.submit "Actualizar", class: "waves-effect waves-light btn" %>
    </div>
  <% end %>
  <br>
  <h4 class="center">Eliminar mi cuenta</h4>

  <p>Â¿No te agrado?, cuentanos en el correo: nomeagrado@doitfast.com</p>

  <div class="class flex-center">
    <%= button_to "Eliminar", registration_path(resource_name), data: { confirm: "Estas Seguro :'(" }, method: :delete, class: "waves-effect waves-light btn"%>
  </div>

  <%= link_to "Regresar", :back %>
  <br><br>
</div>