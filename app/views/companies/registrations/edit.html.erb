<div class="wrapper">
  <h4>Mi Perfil</h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :address %><br />
      <%= f.text_field :address, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :contact %><br />
      <%= f.text_field :contact, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :descrip %><br />
      <%= f.text_area :descrip, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :web %><br />
      <%= f.text_field :web, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions flex-center">
      <%= f.submit "Actualizar", class: "waves-effect waves-light btn" %>
    </div>
  <% end %>

  <h4 class="center">Eliminar mi cuenta</h4>

  <p>Â¿No te agrado?, cuentanos en el correo: nomeagrado@doitfast.com</p>


  <div class="class flex-center">
    <%= button_to "Eliminar", registration_path(resource_name), data: { confirm: "Estas Seguro :'(" }, method: :delete, class: "waves-effect waves-light btn" %>
  </div>

  <%= link_to "Regresar", :back %>
  <br><br>
</div>